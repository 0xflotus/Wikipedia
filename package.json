{
  "name": "wikipedia",
  "version": "1.0.9",
  "description": "A JavaScript wrapper for the wikipedia apis",
  "main": "dist/src",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepublishOnly": "tsc --build --clean && tsc",
    "test": "tsc --noEmit && ava",
    "build": "yarn lint && tsc --build --clean && tsc",
    "postbuild": "copyfiles -u 1 test/parser/samples/*.txt dist/test",
    "prepare": "yarn build",
    "lint": "eslint source/*.ts",
    "release": "np"
  },
  "author": "Govind S",
  "license": "MIT",
  "homepage": "https://github.com/dopecodez/wikipedia",
  "repository": {
    "type": "git",
    "url": "git://github.com/dopecodez/wikipedia.git"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/infobox-parser": "^3.3.0",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "ava": "^3.8.2",
    "eslint": "^7.11.0",
    "eslint-plugin-tsdoc": "^0.2.7",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist/source"
  ],
  "types": "dist/source/",
  "ava": {
    "files": [
      "test/*"
    ],
    "timeout": "1m",
    "typescript": {
      "rewritePaths": {
        "test/": "dist/test/"
      }
    }
  },
  "dependencies": {
    "infobox-parser": "^3.4.1",
    "node-fetch": "^2.6.1"
  },
  "keywords": []
}
